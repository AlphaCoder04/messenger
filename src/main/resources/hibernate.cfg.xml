<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/messenger</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">windowsistdoof</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.show_sql">true</property>

        <mapping class="database.Anrufe"/>
        <mapping class="database.Benutzer"/>
        <mapping class="database.Chats"/>
        <mapping class="database.Dateien"/>
        <mapping class="database.Gruppen"/>
        <mapping class="database.Kontakte"/>
        <mapping class="database.Nachrichten"/>
        <mapping class="database.Videoanrufe"/>
    </session-factory>
</hibernate-configuration>